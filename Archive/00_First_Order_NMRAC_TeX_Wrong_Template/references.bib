	pages = {161--166},
	file = {Mareels et al. - 1987 - Revisiting the Mit Rule for Adaptive Control.pdf:/Users/dalimwahby/Zotero/storage/CKVMARFZ/Mareels et al. - 1987 - Revisiting the Mit Rule for Adaptive Control.pdf:application/pdf;ScienceDirect Snapshot:/Users/dalimwahby/Zotero/storage/ZQ5G25VZ/S1474667017559546.html:text/html},
}

